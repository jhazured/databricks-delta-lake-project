[pydocstyle]
# Convention to use
convention = google

# Match only docstrings for classes and functions
match = (?!test_).*\.py

# Match directories
match-dir = (?!\.git|\.tox|dist|doc|build|\.venv|venv|\.mypy_cache).*

# Add error codes to ignore
add-ignore = D100,D101,D102,D103,D104,D105,D106,D107,D200,D203,D213,D214,D215,D300,D301,D400,D401,D402,D403,D404,D405,D406,D407,D408,D409,D410,D411,D412,D413,D414,D415,D416,D417